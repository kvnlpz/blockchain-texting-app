#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/bash" ]; then
  exec "$basedir/bash"  "$basedir/../@solana/web3.js/bin/localnet.sh" "$@"
else 
  exec bash  "$basedir/../@solana/web3.js/bin/localnet.sh" "$@"
fi
